<Window x:Class="Witchr.Core.Wpf.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign In" Height="350" Width="525">
    <Grid ShowGridLines="False" Background="#FF2670C7">
        <TextBox Height="22" HorizontalAlignment="Left" Margin="72,57,0,0" Name="login" VerticalAlignment="Top" Width="147" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="73,100,0,0" Name="password" VerticalAlignment="Top" Width="145" />
        <Button Content="Sign in" Height="25" HorizontalAlignment="Left" Margin="73,152,0,0" Name="signInButton" VerticalAlignment="Top" Width="79" />
    </Grid>
</Window>
